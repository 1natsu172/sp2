{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules/@types/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
